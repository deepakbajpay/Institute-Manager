<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/ll_dialog_datesheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/dialog_datesheeet_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/dialog_datesheeet_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="DD/MM/YYYY"
        android:digits="1234567890/"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/dialog_datesheeet_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="HH:MM"
        android:digits="1234567890:"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dialog_datesheet"
        android:layout_margin="16dp"
        android:weightSum="2">
    <Button
        android:id="@+id/dialog_datesheet_btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="add"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark" />
    <Button
        android:id="@+id/dialog_datesheet_btn_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="done"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark" />
    </LinearLayout>

</RelativeLayout>
