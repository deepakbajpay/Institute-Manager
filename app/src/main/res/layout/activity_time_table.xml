<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.coderzpassion.studentfaculty.ui.TImeTableActivity">


    <LinearLayout
        android:id="@+id/ll_fiter_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:weightSum="5">

        <Spinner
            android:id="@+id/timetable_department_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="3"
            android:background="@android:color/white" />

        <Spinner
            android:id="@+id/timetable_batch_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:background="@android:color/white" />
    </LinearLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/preview_photo_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_fiter_options"
        android:scaleType="fitCenter" />
    
    <ImageView
        android:id="@+id/timetable_add_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_image"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/timetable_edit_iv"
        android:layout_width="40dp"
        android:visibility="gone"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_edit"
        android:background="#66000066"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
