<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        >

    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/college_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/tile_color_1"
        android:drawablePadding="@dimen/dimen_12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/dimen_24dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_24dp"
        android:layout_below="@id/toolbar"
        android:text="College Head"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/hod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/college_head"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@color/tile_color_2"
        android:drawablePadding="@dimen/dimen_12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/dimen_24dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_24dp"
        android:text="HODs"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/faculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hod"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@color/tile_color_3"
        android:drawablePadding="@dimen/dimen_12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/dimen_24dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_24dp"
        android:text="Faculty"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
